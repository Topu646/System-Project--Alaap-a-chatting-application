                    <!--                        android:layout_marginStart="120dp"-->
                    <!--                        android:layout_marginTop="0dp"-->
                    <!--                        android:textSize="15sp"-->
                    <!--                        android:hint="Edit email"-->
                    <!--                        android:visibility="gone"-->
                    <!--                        android:textStyle="bold"/>-->


                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/statusid"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Bio"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/bioeditbtn"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_below="@id/email"-->
                    <!--                        android:layout_marginStart="118dp"-->
                    <!--                        android:layout_marginTop="36dp"-->
                    <!--                        android:layout_toEndOf="@id/usernameid"-->
                    <!--                        android:src="@drawable/baseline_edit_24" />-->

                    <TextView
                        android:id="@+id/bioid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bio"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Simple Living,High Thinking"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </FrameLayout>

    <Button
        android:id="@+id/editstatusbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="620dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/background_shape"
        android:text="edit status"></Button>

    </RelativeLayout>