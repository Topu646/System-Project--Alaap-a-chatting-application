                    <!--                        android:background="@drawable/imagebackground"-->
                    <!--                        android:layout_centerHorizontal="true"-->
                    <!--                        android:layout_marginTop="0dp"-->
                    <!--                        android:src="@drawable/dp2" />-->


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="-150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="120dp"
                        android:background="@drawable/imagebackground"
                        android:backgroundTint="#B80E0E"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profileicon2" />

                    <Button
                        android:id="@+id/changeProfilePictureButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@id/profilePicture"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-100dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/buttonbackground"
                        android:backgroundTint="@color/purple_200"
                        android:text="Change Profile Picture"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/changeProfilePictureButton"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/usernameid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="0dp"
                        android:text="Proloy Karmakar"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/usernameid"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/statusid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-black"
                        android:text="proloy@gmail.com"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/statusid"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Bio"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/bioid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bio"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Simple Living,High Thinking"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/socialid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bioid"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Add social media links"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/linkid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/socialid"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-black"
                        android:text="https://www.facebook.com/?ref=homescreenpwa"
                        android:textSize="14sp"
                        android:textStyle="bold" />

